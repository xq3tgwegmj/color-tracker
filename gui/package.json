{
    "name": "aim-assist-gui",
    "version": "1.0.0",
    "description": "Professional GUI for ColorTracker",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "com.lukem.colortrackerpro",
        "productName": "ColorTracker Pro",
        "directories": {
            "output": "../dist"
        },
        "win": {
            "target": "portable",
            "icon": "icon.png"
        },
        "extraResources": [
            {
                "from": "../ColorTracker.exe",
                "to": "ColorTracker.exe"
            }
        ]
    },
    "devDependencies": {
        "electron": "^33.2.1",
        "electron-builder": "^24.6.4"
    }
}